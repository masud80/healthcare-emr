rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function userHasFacilityAccess(facilityId) {
      let userFacilities = get(/databases/$(database)/documents/user_facilities).where("userId", "==", request.auth.uid).where("facilityId", "==", facilityId);
      return userFacilities.size() > 0;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Facilities collection
    match /facilities/{facilityId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // User-Facilities relationship collection
    match /user_facilities/{docId} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow create, update, delete: if isAdmin();
    }

    // Patients collection
    match /patients/{patientId} {
      allow read, write: if isAuthenticated();
    }

    // Appointments collection
    match /appointments/{appointmentId} {
      allow read, write: if isAuthenticated();
    }
  }
}
